firewall {
    all-ping enable
    broadcast-ping disable
    group {
        network-group Private_LAN {
            description "no access for IoT"
            network 192.168.64.0/25
        }
    }
    ipv6-receive-redirects disable
    ipv6-src-route disable
    ip-src-route disable
    log-martians enable
    name IoT_IN {
        default-action accept
        description ""
        rule 1 {
            action accept
            description "Allow Established Related"
            destination {
                group {
                    network-group Private_LAN
                }
            }
            log disable
            protocol all
            state {
                established enable
                invalid disable
                new disable
                related enable
            }
        }
        rule 2 {
            action accept
            description "PiHole DNS"
            destination {
                address 192.168.32.2/25
                port 53
            }
            log disable
            protocol tcp_udp
        }
        rule 3 {
            action drop
            description "Drop IoT"
            destination {
                group {
                    network-group Private_LAN
                }
            }
            log disable
            protocol all
        }
    }
    name IoT_Local {
        default-action drop
        description "IoT Local Rules"
        rule 1 {
            action accept
            description "Allow IoT DNS"
            destination {
                address 192.168.128.1/25
                port 53
            }
            log disable
            protocol tcp_udp
        }
        rule 2 {
            action accept
            description "Allow DHCP"
            destination {
                port 67
            }
            log disable
            protocol udp
        }
    }
    name WAN_IN {
        default-action drop
        description "WAN to internal"
        rule 10 {
            action accept
            description "Allow established/related"
            state {
                established enable
                related enable
            }
        }
        rule 20 {
            action drop
            description "Drop invalid state"
            state {
                invalid enable
            }
        }
    }
    name WAN_LOCAL {
        default-action drop
        description "WAN to router"
        rule 10 {
            action accept
            description "Allow established/related"
            state {
                established enable
                related enable
            }
        }
        rule 20 {
            action accept
            description "WAN GUI Access"
            destination {
                port 80,443
            }
            log enable
            protocol tcp
        }
        rule 40 {
            action drop
            description "Drop invalid state"
            state {
                invalid enable
            }
        }
    }
    name WAN_OUT {
        default-action accept
        rule 1 {
            action accept
            description "DNS Request logging"
            destination {
                port 53
            }
            log enable
            protocol tcp_udp
        }
    }
    receive-redirects disable
    send-redirects enable
    source-validation disable
    syn-cookies enable
}
interfaces {
    ethernet eth0 {
        address dhcp
        description "Ziggo Modem"
        duplex auto
        firewall {
            in {
                name WAN_IN
            }
            local {
                name WAN_LOCAL
            }
            out {
                name WAN_OUT
            }
        }
        speed auto
    }
    ethernet eth1 {
        description "Raspberry Pi"
        duplex auto
        speed auto
    }
    ethernet eth2 {
        description Local
        duplex auto
        speed auto
    }
    ethernet eth3 {
        description Switch
        duplex auto
        speed auto
    }
    ethernet eth4 {
        description "Access Point"
        duplex auto
        poe {
            output off
        }
        speed auto
    }
    loopback lo {
    }
    switch switch0 {
        description Local
        firewall {
            in {
            }
        }
        mtu 1500
        switch-port {
            interface eth1 {
                vlan {
                    pvid 100
                }
            }
            interface eth2 {
                vlan {
                    pvid 100
                }
            }
            interface eth3 {
                vlan {
                    pvid 101
                }
            }
            interface eth4 {
                vlan {
                    pvid 100
                    vid 101
                    vid 102
                    vid 103
                }
            }
            vlan-aware enable
        }
        vif 100 {
            address 192.168.32.1/25
            description "AP + Mgmt"
            mtu 1500
        }
        vif 101 {
            address 192.168.64.1/25
            description "Private LAN"
            mtu 1500
        }
        vif 103 {
            address 192.168.128.1/25
            description IoT
            firewall {
                in {
                    name IoT_IN
                }
                local {
                    name IoT_Local
                }
            }
            mtu 1500
        }
    }
}
protocols {
}
service {
    dhcp-server {
        disabled false
        hostfile-update disable
        shared-network-name DHCP_vlan100 {
            authoritative enable
            subnet 192.168.32.0/25 {
                default-router 192.168.32.1
                dns-server 192.168.32.1
                domain-name mgmt.epsilon.local
                lease 86400
                ntp-server 193.70.94.182
                ntp-server 193.234.225.67
                start 192.168.32.64 {
                    stop 192.168.32.126
                }
                unifi-controller 192.168.32.2
            }
        }
        shared-network-name DHCP_vlan101 {
            authoritative enable
            subnet 192.168.64.0/25 {
                default-router 192.168.64.1
                dns-server 192.168.64.1
                domain-name priv.epsilon.local
                lease 86400
                ntp-server 193.234.225.67
                ntp-server 193.70.94.182
                start 192.168.64.2 {
                    stop 192.168.64.126
                }
            }
        }
        shared-network-name DHCP_vlan103 {
            authoritative enable
            subnet 192.168.128.0/25 {
                default-router 192.168.128.1
                dns-server 192.168.128.1
                domain-name IoT.epsilon.local
                lease 86400
                ntp-server 193.70.94.182
                ntp-server 193.234.225.67
                start 192.168.128.2 {
                    stop 192.168.128.126
                }
            }
        }
        static-arp disable
        use-dnsmasq disable
    }
    dns {
        forwarding {
            cache-size 100
            except-interface eth0
            system
        }
    }
    gui {
        http-port 80
        https-port 443
        older-ciphers disable
    }
    mdns {
        repeater {
            interface switch0
            interface switch0.103
            interface switch0.101
        }
    }
    nat {
        rule 5002 {
            description "masquerade for WAN"
            outbound-interface eth0
            type masquerade
        }
    }
    ssh {
        port 22
        protocol-version v2
    }
    unms {
        disable
    }
}
